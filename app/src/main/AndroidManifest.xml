<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shogonir.android_sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />
    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".http_connector.HttpConnectorActivity" />
        <activity android:name=".image_item_view.ImageItemViewActivity" />
        <activity android:name=".drag_sort_list.DragSortListActivity" />
        <activity android:name=".horizontal_scroll_and_tab.HorizontalScrollAndTabActivity" />
        <activity android:name=".calendar.CalendarActivity" />
        <activity android:name=".custom_adapter.CustomAdapterActivity" />
        <activity android:name=".realm.RealmActivity" />
        <activity android:name=".realm.RealmInsertActivity" />
        <activity android:name=".sensor.SensorListenerActivity" />
        <activity android:name=".gl_surface.GLSurfaceActivity"></activity>
    </application>

</manifest>